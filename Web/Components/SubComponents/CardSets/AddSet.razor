@using Microsoft.AspNetCore.Components.Web;
@using Microsoft.AspNetCore.Components.Forms;

<h3>New Card Set</h3>
<EditForm Model=NewSet OnSubmit=SubmitNewSet>
    <InputNumber id="year" @bind-Value=NewSet.Year />
    <InputText id="name" @bind-Value=NewSet.Name />
    <button id="newSet" type="submit" class="btn-success" @onsubmit=SubmitNewSet>Submit</button>
</EditForm>
