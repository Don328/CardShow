@using CardShow.Web.Components.SubComponents.Cards
@using Microsoft.AspNetCore.Components.Web;
@using CardShow.Web.Components.SubComponents.CardSets;

<div class="row">
    <SetList Sets=Sets
             OnViewSet=ViewSet />

    <div class="col">
        <div class="btn-group-sm">
            <button type="button"
                    class="btn-outline-primary"
                    style="width:fit-content;height:fit-content;font-size:small;"
                    disabled=@showAddSet
                    @onclick=ShowAddSetForm>
                Add Set
            </button>
            <button type="button"
                    class="btn-outline-danger"
                    style="width:fit-content;height:fit-content;font-size:small;"
                    disabled=@hideDeleteSet
                    @onclick=DeleteSet>
                Delete
            </button>
        </div>
        <div class="row" style="margin-top:2em">
            <div class="col" style="max-width:fit-content;">
                @if (SelectedSet.Id > 0)
                {
                    <h3>Selected Set</h3>
                    <div class="col" style="max-width:fit-content;margin-bottom:2em;">
                        <ViewSet SelectedSet=SelectedSet />
                    </div>
                    <div class="row">
                        <div class="col">
                            <h4>Cards</h4>
                        </div>
                        @if (!showAddCard)
                        {
                            <div class="col">
                                <button type="button"
                                        class="btn-sm btn-outline-primary"
                                        style="font-size:x-small;padding:.3em;padding-top:.1em;padding-bottom:.1em"
                                        @onclick=ShowNewCardForm>
                                    New
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="col">
                                <button type="button"
                                        class="btn-sm btn-outline-secondary"
                                        style="font-size:x-small;padding:.3em;padding-top:.1em;padding-bottom:.1em"
                                        @onclick=HideNewCardForm>
                                    Cancel
                                </button>
                            </div>
                        }
                    </div>
                    if (showAddCard)
                    {
                        <AddCard CreateCard=CreateNewCard />
                    }
                    else
                    {
                        <CardList Cards=Cards
                            OnDelete=DeleteCard/>
                    }
                }
            </div>
        </div>
        @if (showAddSet)
        {
            <h3>New Set</h3>
            <AddSet OnSubmit=AddSet />
        }
    </div>
</div>
